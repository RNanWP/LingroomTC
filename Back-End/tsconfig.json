{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "types": ["jest", "node"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    // "rootDir": "./src",
    "baseUrl": "./src"
  },
  "include": ["src/**/*", "jest.setup.ts", "src/tests/**/*.ts"],
  "exclude": ["node_modules"]
}
